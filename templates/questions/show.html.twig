{% extends 'base.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
    <h1>Questions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ question.entitled }}</td>
            </tr>
            <tr>
                <th>Réponse</th>
                <td>{{ question.response }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ question.dateStart ? question.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ question.dateEnd ? question.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_questions_index') }}">Retour à la liste</a>

    <a href="{{ path('app_questions_edit', {'id': question.id}) }}">Modifier</a>

    {{ include('questions/_delete_form.html.twig') }}
{% endblock %}
